@model IEnumerable<E_Commerce_Cake.Models.Database.Invoice>

@{
    ViewData["Title"] = "Index";
    Layout = "../Shared/_Customer.cshtml";
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>OrderList</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a asp-action="AfterLogin" asp-controller="Cart">Back</a>
                    <span>OrderList</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Wishlist Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping__cart__table">
                    <table class="table mt-2">
                        <thead class="bg-dark text-white text-uppercase tbody border-1 border-dark">
                            <tr>

                                <th class="text-white">
                                    time
                                </th>
                                <th class="text-white">
                                    name
                                </th>
                                <th class="text-white">
                                    TotalBill
                                </th class="text-white">
                                <th class="text-white">Order Status</th>
                                <th class="text-white">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Time.Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalBill)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status.Name)
                                    </td>
                                    <td>
                                        <a class="btn bg-warning text-black" asp-action="DetailsCustomer" asp-route-id="@item.Id">Address</a> |
                                        <a class="btn bg-success text-white" asp-controller="OrderDetails" asp-route-id="@item.Id" asp-action="IndexCustomer">Show Items</a> |
                                        <a class="btn bg-danger text-white" asp-action="DeleteCustomer" asp-route-id="@item.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive-fill" viewBox="0 0 16 16">
                                                <path d="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1M.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8z" />
                                            </svg>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>