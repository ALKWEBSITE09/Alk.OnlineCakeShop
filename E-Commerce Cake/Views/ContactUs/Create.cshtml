@model E_Commerce_Cake.Models.ViewModel.ContactUsVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";

}

@if (ViewBag.ContactUs != null)
{

    <div style="
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        z-index:9999;
        justify-content: center;
        align-items: center;" id="overlay">
        <div style="
        z-index:9999;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        text-align: center;">
            <h2 class="text-success">Congratulations!</h2>
            <p>Message Send Successufully.</p>
            <button style="
        padding: 10px 20px;
        z-index:9999;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;" onclick="closePopup()">
                Close
            </button>
        </div>
    </div>

    <script>
        function closePopup() {
            document.getElementById('overlay').style.display = 'none';
        }
    </script>
}

