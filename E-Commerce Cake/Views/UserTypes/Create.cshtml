@model E_Commerce_Cake.Models.ViewModel.UserTypeVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

<h1>Add UserType</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-10 margin">
                <input asp-for="Type" class="form-control " autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Type" class="form-label">UserType Name</label>
                <span asp-validation-for="Type" class="text-danger "></span>
            </div>
            <div style="margin-top:10px;">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary text-uppercase">Add UserType</button>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

