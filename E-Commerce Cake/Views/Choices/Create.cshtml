@model E_Commerce_Cake.Models.ViewModel.ChoiceVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Customer.cshtml";


}
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Choice</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a asp-action="Dashboard" asp-controller="Customer">Back</a>
                    <a asp-action="AfterLogin" asp-controller="Cart">Shop</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<hr />

<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-lg-6">
                                <label asp-for="Image" class="control-label"></label>
                                <input asp-for="Image" class="form-control" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6" >
                                <label asp-for="subId" class="form-label">Category</label>
                                <div style="margin-right:15em;">
                                    <select asp-for="subId" asp-items="@ViewBag.Sub" placeholder="Sub Category" required>
                                        <option>Select Category</option>
                                    </select>
                                </div>
                                
                                <span asp-validation-for="subId" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <label asp-for="Quantity" class="form-label">Quantity</label>
                                <input asp-for="Quantity" class="form-control " placeholder="Quantity" />
                                <span>>>> quantity fill in gram.</span>
                                <span asp-validation-for="Quantity" class="text-danger "></span>
                            </div>

                            <div class="col-lg-6">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control " placeholder="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger "></span>
                            </div>
                            <div style="margin-top:10px;">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary text-uppercase">Send Choice</button>
                            </div>
                        </div>
                            <div>
                                <a asp-action="Dashboard" asp-controller="Customer">Back to List</a>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
