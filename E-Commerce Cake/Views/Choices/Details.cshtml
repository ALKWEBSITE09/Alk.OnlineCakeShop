@model E_Commerce_Cake.Models.Database.Choice

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";

}
 
<h1>Choice Details</h1>

<div>
    <h4>Choice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="~/Images//Choice/@Html.DisplayFor(model => model.Image)" width="200px" height="200px" />
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceId)
        </dd>
    </dl>
</div>
<div>
    <a class="btn bg-dark text-white" asp-action="Index">Back to List</a>
</div>
