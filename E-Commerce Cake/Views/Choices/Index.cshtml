@model IEnumerable<E_Commerce_Cake.Models.Database.Choice>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

<h1>Choice List</h1>

@if (TempData["Accept"] != null)
{
    <p class="text-success">@TempData["Accept"] </p>
}
@if (TempData["NotAccept"] != null)
{
    <p class="text-danger">@TempData["NotAccept"] </p>
}
@if (TempData["Deliver"] != null)
{
    <p class="text-success">@TempData["Deliver"] </p>
}

<table class="table">
    <thead class="bg-dark text-white text-uppercase tbody border-1 border-dark">
        <tr>
            <th>
                User Email
            </th>
            <th>
                Image
            </th>
           
            <th>
                Price
            </th>
            <th>Price Action</th>
            <th>
                Check Customer
            </th>
            <th>Order</th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody class="bg-light tbody border-1 border-dark">
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MyProperty.Email)
                </td>
            <td>
                    <img src="~/Images/Choice/@Html.DisplayFor(modelItem => item.Image)" width="100px" height="100px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceId)
            </td>
            
            <td>
                    <a class="btn bg-success text-white" asp-action="EnterPrice" asp-route-id="@item.Id">Enter Price</a> |
                    <a class="btn bg-dark text-white" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pc.Name)
                </td>
            <td>
                    <a class="btn bg-success text-white" asp-action="Accept" asp-route-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                            <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                        </svg>
                    </a> |
                    <a class="btn bg-danger text-white" asp-action="NotAccept" asp-route-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                        </svg>
                    </a> |
                    <a class="btn bg-warning text-black" asp-action="Deliver" asp-route-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-check" viewBox="0 0 16 16">
                            <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0z" />
                            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zm3.915 10L3.102 4h10.796l-1.313 7zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                        </svg>
                    </a>
            </td>
            <td>
                    <a class="btn bg-danger text-white" asp-action="DeleteAdmin" asp-route-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive-fill" viewBox="0 0 16 16">
                            <path d="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1M.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8z" />
                        </svg>
                    </a>

            </td>
        </tr>
}
    </tbody>
</table>
