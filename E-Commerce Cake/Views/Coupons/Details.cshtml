@model E_Commerce_Cake.Models.Database.Coupon

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

<h1>Coupon Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Images/Coupons/@Html.DisplayFor(model => model.CouponImage)" width="100px" height="100px" />
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Count
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoofCoupon)
        </dd>
        <dt class="col-sm-2">
            Coupon Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CouponCode)
        </dd>
        <dt class = "col-sm-2">
            Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            Discount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class = "col-sm-2">
            Min-Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinimumAmount)
        </dd>
        <dt class = "col-sm-2">
            Active
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
</div>
<div>
    <a class="btn bg-success text-white" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn bg-dark text-white" asp-action="Index">Back to List</a>
</div>
