@model IEnumerable<E_Commerce_Cake.Models.Database.Coupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

<h1>Coupon List</h1>
<hr />
<p>
    <a asp-action="Create" class="btn bg-primary text-white">Add New Coupon</a>
</p>
<table class="table">
    <thead class="bg-dark text-white text-uppercase tbody border-1 border-dark">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Count
            </th>
            <th>
                Code
            </th>
            <th>
                Type
            </th>
            <th>
                Discount
            </th>
            <th>
                Min-Amount
            </th>
            <th>
                Image
            </th>
            <th>
                Active
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody class="bg-light tbody border-1 border-dark">
@foreach (var item in Model) {
        <tr>
                <td>
                    #@Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoofCoupon)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CouponCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumAmount)
            </td>
            <td>
                    <img src="~/Images/Coupons/@Html.DisplayFor(modelItem => item.CouponImage)" width="100px" height="100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                    <a class="btn bg-success text-white" asp-action="Edit" asp-route-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                        </svg>
                    </a> |
                    <a class="btn bg-dark text-white" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn bg-danger text-white" asp-action="Delete" asp-route-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive-fill" viewBox="0 0 16 16">
                            <path d="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1M.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8z" />
                        </svg>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
