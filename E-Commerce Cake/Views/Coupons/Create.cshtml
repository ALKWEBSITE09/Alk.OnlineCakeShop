@using E_Commerce_Cake.Models.Database
@model E_Commerce_Cake.Models.ViewModel.CouponVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

<h4>Add Coupon</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-10 margin" style="margin-top:10px;">
                <input asp-for="Tittle" class="form-control " autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Tittle" class="form-label">Coupon Name</label>
                <span asp-validation-for="Tittle" class="text-danger "></span>
            </div>
           
            <div class="form-floating mb-10 margin" style="margin-top:10px;">
                <input asp-for="NoofCoupon" class="form-control " autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="NoofCoupon" class="form-label">No. Of Coupon</label>
                <span asp-validation-for="NoofCoupon" class="text-danger "></span>
            </div>
            <div class="form-floating mb-10 margin" style="margin-top:10px;">
                <select asp-for="Type" class="form-control " asp-items="@Html.GetEnumSelectList<CouponType>()" autocomplete="username" aria-required="true" placeholder="name@example.com"></select>
                <label asp-for="Type" class="form-label">Type</label>
                <span asp-validation-for="Type" class="text-danger "></span>
            </div>
            <div class="form-floating mb-10 margin" style="margin-top:10px;">
                <input asp-for="Discount" class="form-control " autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Discount" class="form-label">Discount</label>
                <span asp-validation-for="Discount" class="text-danger "></span>
            </div>
            <div class="form-floating mb-10 margin" style="margin-top:10px;">
                <input asp-for="MinimumAmount" class="form-control " autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="MinimumAmount" class="form-label">Min-Amount</label>
                <span asp-validation-for="MinimumAmount" class="text-danger "></span>
            </div>
            <div class="form-floating mb-10 margin" style="margin-top:10px;">
                <input asp-for="CouponImage" class="form-control " autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="CouponImage" class="text-danger "></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div style="margin-top:10px;">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary text-uppercase">Add Coupon</button>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



