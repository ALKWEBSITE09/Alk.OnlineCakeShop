@model E_Commerce_Cake.Models.Database.User

@{
    ViewData["Title"] = "MobileCheck";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<h1>User</h1>

<h4>MobileCheck</h4>


@if (ViewBag.msg != null)
{
    <div style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    z-index:9999;
    justify-content: center;
    align-items: center;" id="overlay">
        <div style="
    z-index:9999;
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    text-align: center;">
            <h2 class="text-danger">Sorry!</h2>
            <p> Mobile Number Not Found.</p>
            <button style="
    padding: 10px 20px;
    z-index:9999;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 10px;" onclick="closePopup()">
                Close
            </button>
        </div>
    </div>

    <script>
        function closePopup() {
            document.getElementById('overlay').style.display = 'none';
        }
    </script>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MobileCheck">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Phone" class="text-black">Mobile No</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter Your Mobile Number" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" value="check" class="btn btn-primary" />
                <a class="btn bg-black text-white" asp-action="Index" asp-controller="Home">Back to List</a>

            </div>
        </form>
    </div>
</div>


