@model E_Commerce_Cake.Models.ViewModel.UserVM

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<h1 class="row justify-content-center" style="font-weight:bold;">Customer </h1>

<h4 class="row justify-content-center">Create New Account</h4>
@{
    if (TempData["email"] != null)
    {
        <div style="
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        z-index:9999;
        justify-content: center;
        align-items: center;" id="overlay">
            <div style="
        z-index:9999;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        text-align: center;">
                <h2 class="text-danger">Sorry!</h2>
                <p>Email Already Registed.</p>
                <button style="
        padding: 10px 20px;
        z-index:9999;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;" onclick="closePopup()">
                    Close
                </button>
            </div>
        </div>

        <script>
            function closePopup() {
                document.getElementById('overlay').style.display = 'none';
            }
        </script>
    }
    if (TempData["phone"] != null)
    {
        <div style="
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        z-index:9999;
        justify-content: center;
        align-items: center;" id="overlay">
            <div style="
        z-index:9999;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        text-align: center;">
                <h2 class="text-danger">Sorry!</h2>
                <p>Mobile Number Already Registed.</p>
                <button style="
        padding: 10px 20px;
        z-index:9999;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;" onclick="closePopup()">
                    Close
                </button>
            </div>
        </div>

        <script>
            function closePopup() {
                document.getElementById('overlay').style.display = 'none';
            }
        </script>
    }
}
<hr />
<div class="container">
    <div>
        <div class="col-lg-12">
            <div class="contact__form">
                <form asp-action="Register">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-lg-4">
                            <label asp-for="FirstName" class="text-black">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter Your First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4">
                            <label asp-for="LastName" class="text-black">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter Your Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4">
                            <label asp-for="BirthDate" class="text-black">Birth Date</label>
                            <input asp-for="BirthDate" class="form-control" placeholder="Enter Your Birth Date" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4">
                            <label asp-for="Username" class="text-black">User Name</label>
                            <input asp-for="Username" class="form-control" placeholder="Create User Name" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4">
                            <label asp-for="Email" class="text-black">Customer Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter Your Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4">
                            <label asp-for="Phone" class="text-black">Mobile No</label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter Your Mobile Number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="Pass" class="text-black">Password</label>
                            <input asp-for="Pass" class="form-control" placeholder="Create Password" />
                            <span asp-validation-for="Pass" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="ConfirmPass" class="text-black">Confirm Password</label>
                            <input asp-for="ConfirmPass" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="ConfirmPass" class="text-danger"></span>
                        </div >
                        <div class="form-group row col-lg-12" style="margin-top:5px;">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create New Account</button>
                        </div>
                    </div>
                </form>
                <div>
                    <a asp-action="Index" asp-controller="Home">Home</a><br />
                    <a asp-action="Login" asp-controller="Customer">already register</a>
                </div>
            </div>
        
        </div>
        

    </div>
</div>



