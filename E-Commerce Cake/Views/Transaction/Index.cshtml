@model IEnumerable<E_Commerce_Cake.Models.Database.Payment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Customer.cshtml";

}


<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>TransactionList</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a asp-action="AfterLogin" asp-controller="Cart">Back</a>
                    <span>TransactionList</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Wishlist Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping__cart__table">
                    <table class="table mt-2">
                        <thead class="bg-dark text-white text-uppercase tbody border-1 border-dark">
                            <tr>
                                <th class="text-white">
                                    TransId
                                </th>
                                <th class="text-white">
                                    OrderId
                                </th>
                                <th class="text-white">
                                    Price
                                </th>
                                <th class="text-white">
                                    Status
                                </th>
                                <th class="text-white">
                                    Time
                                </th>
                                <th class="text-white">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Inv.TotalBill)
                                    </td>
                                    <td class="text-success">
                                        @Html.DisplayFor(modelItem => item.Status.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Inv.Time.Name)
                                    </td>
                                    <td>

                                        <a asp-action="Details" class="btn bg-dark text-white" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" class="btn bg-danger text-white" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
