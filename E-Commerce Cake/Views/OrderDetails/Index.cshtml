@model IEnumerable<E_Commerce_Cake.Models.Database.OrderDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "../Shared/_Admin.cshtml";
}

<h1>Order Detais List</h1>
<a class="btn bg-dark text-white" asp-controller="Invoices" asp-action="Index">Back to List</a>
<p>

</p>
<table class="table">
    <thead class="bg-dark text-white text-uppercase tbody border-1 border-dark">

        <tr>
            <th>
                Image
            </th>
            <th>
                Item Name
            </th>
            <th>
                Category
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
           
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="bg-light tbody border-1 border-dark">
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="~/Images//Product/@Html.DisplayFor(modelItem => item.Item.ImagePath)" width="100px" height="100px" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Cg.Tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn bg-dark text-white" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn bg-danger text-white" asp-action="Delete" asp-route-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive-fill" viewBox="0 0 16 16">
                            <path d="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1M.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8z" />
                        </svg>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
