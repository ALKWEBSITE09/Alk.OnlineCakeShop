@model E_Commerce_Cake.Models.Database.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

<h1>Product Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Images/Product/@Html.DisplayFor(model => model.ImagePath)" width="100px" height="100px"/>
        </dd>
        <dt class = "col-sm-2">
            Product Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cg.Tittle)
        </dd>
        <dt class = "col-sm-2">
            Sub Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Scg.tittle)
        </dd>
    </dl>
</div>
<div>
    <a class="btn bg-success text-white" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn bg-dark text-white" asp-action="Index">Back to List</a>
</div>
