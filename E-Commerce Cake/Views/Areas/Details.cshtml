@model E_Commerce_Cake.Models.Database.Area

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

<h1>Area Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Area Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            City Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cities.Name)
        </dd>
        <dt class="col-sm-2">
            State Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cities.States.Name)
        </dd>
    </dl>
</div>
<div>
    <a class="btn bg-success text-white" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn bg-dark text-white" asp-action="Index">Back to List</a>
</div>
